@model BrainStormEra.Repo.Certificate.CertificateViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificate of Completion</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/HomePage/homePage.css">
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css">
    <link href="~/css/Notification/notification-modal.css" rel="stylesheet" />
    <link href="~/css/HomePage/Learner/HomePageLearner.css" rel="stylesheet" />

    <!-- Custom Styling -->
    <style>
        /* Main container styling */
        .certificate-page {
            max-width: 100%;
            margin: 0 auto;
        }

        /* User Info Section Styling */
        .user-info-section {
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #eef7fc;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .user-info h3, .user-info p {
            color: #333;
            margin-bottom: 8px;
        }

        .user-info h3 {
            font-weight: bold;
            font-size: 1.5rem;
        }

        /* Certificate Section Styling */
        .certificate-section {
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #fff;
            padding: 20px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
            text-align: center;
            min-width: 400px;
            max-width: 800px;
        }

        .certificate-content {
            padding: 30px;
            border: 3px solid #d4af37;
            border-radius: 10px;
            box-shadow: inset 0px 0px 10px rgba(0, 0, 0, 0.05);
            background-color: #fffdf5;
        }

        .certificate-header {
            font-size: 1.5rem;
            color: #d4af37;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .certificate-title {
            font-size: 2.5rem;
            color: #d4af37;
            font-weight: bold;
            margin: 20px 0;
        }

        .certificate-body, .certificate-footer {
            font-size: 1rem;
            color: #555;
            margin: 0;
        }

        .certificate-username {
            font-size: 2rem;
            color: #333;
            font-style: italic;
            padding: 10px;
            border-bottom: 2px solid #d4af37;
            margin-bottom: 15px;
        }

        .certificate-logo img {
            width: 100px;
            height: auto;
            margin: 20px 0;
        }

        .certificate-footer {
            font-size: 0.9rem;
            color: #888;
        }

        /* Download Button Styling */
        .download-btn {
            margin-top: 20px;
            padding: 10px 25px;
            font-size: 1rem;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .download-btn:hover {
            background-color: #0056b3;
        }

    </style>

    <!-- Include html2canvas and jsPDF from CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
</head>

<body>
    @await Html.PartialAsync("~/Views/Shared/Learner/Header/_Header.cshtml")
    
    <div class="container container-certificate mt-5">
        <div class="certificate-page row g-4 justify-content-center">

            <!-- Left Section: User and Course Information -->
            <div class="col-lg-4 col-md-5 col-sm-10 user-info-section">
                <div class="user-info text-center">
                    <h3>Completed by @Model.UserName</h3>
                    <p><strong>Completion Date:</strong> @Model.CompletedDate.ToString("dd/MM/yyyy")</p>
                    <p><strong>Duration:</strong> Approximately @ViewData["Duration"] days to complete</p>
                    <p>@Model.UserName’s account is verified by BrainStormEra. We certify their successful completion of the <strong>@Model.CourseName</strong> specialization.</p>
                    <button class="download-btn" onclick="downloadCertificate()">Download Certificate</button>
                </div>
            </div>

            <!-- Right Section: Certificate Display -->
            <div class="col-lg-7 col-md-7 col-sm-10 certificate-section" id="certificateArea">
                <div class="certificate-content">
                    <h4 class="certificate-header">BrainStormEra Academy</h4>
                    <h2 class="certificate-title">Certificate of Completion</h2>
                    <p class="certificate-body">This certificate is awarded to</p>
                    <h3 class="certificate-username">@Model.UserName</h3>
                    <p class="certificate-body">for successfully completing the course</p>
                    <h4>"@Model.CourseName"</h4>
                    <p class="certificate-body">on @Model.CompletedDate.ToString("dd/MM/yyyy")</p>
                    <div class="certificate-logo">
                        <img src="~/lib/img/Login/BrainStormEra_logo.png" alt="BrainStormEra Logo">
                    </div>
                    <p class="certificate-footer">Verified by BrainStormEra Academy</p>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Footer/_Footer.cshtml")

    <!-- JavaScript to handle downloading only the certificate area as PDF -->
    <script>
        function downloadCertificate() {
            const certificateArea = document.getElementById("certificateArea");

            html2canvas(certificateArea, { scale: 2 }).then(canvas => {
                const pdf = new jsPDF("p", "pt", "a4");
                const imgData = canvas.toDataURL("image/png");
                const imgWidth = 500;
                const imgHeight = canvas.height * imgWidth / canvas.width;
                pdf.addImage(imgData, 'PNG', 30, 40, imgWidth, imgHeight);
                pdf.save("certificate.pdf");
            });
        }
    </script>

    <!-- Bootstrap JavaScript Bundle (Optional for advanced features) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
