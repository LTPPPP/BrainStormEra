@model BrainStormEra.Models.Lesson

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="stylesheet" href="~/css/Lesson/ViewLessonLearner.css" />
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css" />
    <link rel="icon" href="~/lib/img/BrainStormEra_logo.png" type="image/x-icon">
    <title>Lesson</title>
</head>

<body>
    @await Html.PartialAsync("~/Views/Shared/Learner/Header/_Header.cshtml")

    <div class="container-fluid content-wrapper" style="margin-top: 50px;">
        @* Lấy dữ liệu chương và bài học *@
        @{
            var lessons = (IEnumerable<BrainStormEra.Models.Lesson>)ViewBag.Lessons;
            var chapters = (IEnumerable<BrainStormEra.Models.Chapter>)ViewBag.Chapters;
        }

        <!-- Sidebar -->
        <nav class="sidebar">
            <h3> <i class="fas fa-bars"></i> Menu</h3>
            <div class="accordion" id="chapterAccordion">
                @foreach (var chapter in chapters)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="heading@chapter.ChapterId">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@chapter.ChapterId" aria-expanded="false" aria-controls="collapse@chapter.ChapterId">
                                @chapter.ChapterName
                            </button>
                        </h2>
                        <div id="collapse@chapter.ChapterId" class="accordion-collapse collapse" aria-labelledby="heading@chapter.ChapterId" data-bs-parent="#chapterAccordion">
                            <div class="accordion-body">
                                <ul class="list-unstyled">
                                    @foreach (var lesson in lessons.Where(l => l.ChapterId == chapter.ChapterId))
                                    {
                                        <li>
                                            <a href="#" class="lesson-link" data-lesson-id="@lesson.LessonId">
                                                <i class="lesson-icon @(lesson.LessonTypeId == 1 ? "fas fa-play-circle" : "fas fa-book")"></i> @lesson.LessonName
                                            </a>
                                            <hr />
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </nav>

        <!-- Main content for Lesson -->
        <div class="main-content" id="lesson-content">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="#">Introducing about C++</a>
                    </li>
                    <li class="breadcrumb-item"><a href="#">Part 1</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        <a href="#">@Model.LessonName</a>
                    </li>
                </ol>
            </nav>

            <h2 id="lesson-title">@Model.LessonName</h2>
            <p id="lesson-description">@Model.LessonDescription</p>

            <!-- Content area based on LessonTypeId -->
            <div>@Model.LessonTypeId</div>
            <div id="lesson-media">
                @if (Model.LessonTypeId == 1)
                {
                    <iframe width="560" height="315" src="@Model.LessonContent" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                }
                else if (Model.LessonTypeId == 2)
                {
                    <iframe width="100%" height="500" src="@Model.LessonContent" type="application/pdf" frameborder="0"></iframe>
                }
                else
                {
                    <p>No content available for this lesson.</p>
                }
            </div>

            <!-- Mark as Completed Button -->
            <button id="markCompletedButton" onclick="markAsCompleted()" class="btn btn-primary btn-lg mt-3 float-end">Mark as Completed</button>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Footer/_Footer.cshtml")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var completedLessons = @Html.Raw(Json.Serialize(ViewBag.CompletedLessons));

            completedLessons.forEach(function (lessonId) {
                $(`.lesson-link[data-lesson-id="${lessonId}"] .lesson-icon`)
                    .removeClass('fa-play-circle fa-book')
                    .addClass('fa-check-circle text-success');
            });

            loadLessonContent('@Model.LessonId');

            $('.lesson-link').click(function (e) {
                e.preventDefault();
                var lessonId = $(this).data('lesson-id');
                document.cookie = "CurrentLessonId=" + lessonId + "; path=/";
                loadLessonContent(lessonId);
            });

            function loadLessonContent(lessonId) {
                $.ajax({
                    url: '@Url.Action("ViewLessonLearner", "Lesson")',
                    type: 'GET',
                    data: { lessonId: lessonId },
                    success: function (response) {
                        $('#lesson-title').text(response.lessonName);
                        $('#lesson-description').text(response.lessonDescription);

                        $('#markCompletedButton').remove();
                        const buttonHTML = response.isCompleted
                            ? `<button id="markCompletedButton" class="btn btn-success mt-3 float-end" disabled>✓ Completed</button>`
                            : `<button id="markCompletedButton" class="btn btn-primary mt-3 float-end">Mark as Completed</button>`;
                        $('#lesson-content').append(buttonHTML);

                        if (!response.isCompleted) {
                            $('#markCompletedButton').off('click').on('click', function () {
                                markAsCompleted(lessonId);
                            });
                        }

                        // Display media content based on LessonTypeId
                        if (response.lessonTypeId == 1) {
                            $('#lesson-media').html('<iframe width="100%" height="500" src="' + response.lessonContent + '" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>');
                        } else if (response.lessonTypeId == 2) {
                            $('#lesson-media').html('<iframe width="100%" height="500" src="' + response.lessonContent + '" type="application/pdf" frameborder="0"></iframe>');
                        } else {
                            $('#lesson-media').text("No content available for this lesson.");
                        }

                        // Mark the lesson as completed if response indicates it
                        if (response.isCompleted) {
                            $(`.lesson-link[data-lesson-id="${lessonId}"] .lesson-icon`)
                                .removeClass('fa-play-circle fa-book')
                                .addClass('fa-check-circle text-success');
                        }
                    }
                });
            }

            function markAsCompleted(lessonId) {
                $.ajax({
                    url: '@Url.Action("MarkLessonCompleted", "Lesson")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ lessonId: lessonId }),
                    success: function (response) {
                        if (response.success) {
                            $('#markCompletedButton').text('✓ Completed').removeClass('btn-primary').addClass('btn-success').prop('disabled', true);
                            $(`.lesson-link[data-lesson-id="${lessonId}"] .lesson-icon`).removeClass('fa-play-circle fa-book').addClass('fa-check-circle text-success');
                        } else {
                            alert(response.message || "Failed to mark lesson as completed.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while marking the lesson as completed.");
                    }
                });
            }
        });

        success: function (response) {
            $('#lesson-title').text(response.lessonName);
            $('#lesson-description').text(response.lessonDescription);

            $('#markCompletedButton').remove();
            const buttonHTML = response.isCompleted
                ? `<button id="markCompletedButton" class="btn btn-success mt-3 float-end" disabled>✓ Completed</button>`
                : `<button id="markCompletedButton" class="btn btn-primary mt-3 float-end">Mark as Completed</button>`;

            $('#lesson-content').append(buttonHTML);

            if (!response.isCompleted) {
                $('#markCompletedButton').off('click').on('click', function () {
                    markAsCompleted(lessonId);
                });
            }

            if (response.lessonTypeId == 1) {
                $('#lesson-media').html('<iframe width="100%" height="500" src="' + response.lessonContent + '" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>');
            } else if (response.lessonTypeId == 2) {
                $('#lesson-media').html('<iframe width="100%" height="500" src="' + response.lessonContent + '" type="application/pdf" frameborder="0"></iframe>');
            } else {
                $('#lesson-media').text("No content available for this lesson.");
            }

            // Đánh dấu bài học là hoàn thành nếu response trả về isCompleted = true
            if (response.isCompleted) {
                $(`.lesson-link[data-lesson-id="${lessonId}"] .lesson-icon`)
                    .removeClass('fa-play-circle fa-book')
                    .addClass('fa-check-circle text-success');
            }
        }

    </script>
</body>
</html>
