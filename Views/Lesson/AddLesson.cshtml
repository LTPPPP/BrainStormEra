@model AddLessonViewModel
@{
    Layout = null; // Assuming you're not using a layout page
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Lesson</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Lesson/AddLesson.css">
    <link rel="icon" href="~/lib/img/BrainStormEra_logo.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>

<body>

    @{
        string userRole = Context.Request.Cookies["user_role"];
    }

    @if (userRole == "2")
    {
        @await Html.PartialAsync("~/Views/Shared/Instructor/Header/_Header.cshtml")
    }
    else if (userRole == "1")
    {
        @await Html.PartialAsync("~/Views/Shared/Admin/Header/_Header.cshtml")
    }

    <div class="container-fluid pb-5" style="padding-bottom: 10px;">
        <div class="row ">
            <!-- Sidebar -->
            <div class="col-md-3 bg-SECONDARY sidebar p-3">
                <div class="text-start mb-3">
                    <button type="button" onclick="window.location.href='@Url.Action("ChapterManagement", "Chapter")'"
                            class="btn btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to Course
                    </button>
                </div>
                <a class="btn btn-primary w-100 mb-3" href="@Url.Action("AddLesson", "Lesson")">Add Lesson</a>
                <a class="btn btn-outline-secondary w-100 mb-3" href="@Url.Action("DeleteLesson", "Lesson")">Delete Lesson</a>
                <a class="btn btn-outline-secondary w-100" href="@Url.Action("LessonManagement", "Lesson")">View Lesson</a>
            </div>

            <!-- Main Content for Add Lesson -->
            <div class="col-md-9 d-flex align-items-start" style="min-height: 100vh;">
                <div class="container mt-3">
                    <div class="card w-100">
                        <div class="card-header gradient-header">
                            ADD NEW LESSON
                        </div>
                        <div class="card-body mb-5">
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["SuccessMessage"]
                                </div>
                            }

                            <form method="post" enctype="multipart/form-data">
                                @* Hidden fields *@
                                <input type="hidden" asp-for="Lesson.LessonId" />
                                <input type="hidden" asp-for="Lesson.ChapterId" />

                                @* Lesson Name *@
                                <div class="mb-3">
                                    <label asp-for="Lesson.LessonName" class="form-label">Lesson Name</label>
                                    <input asp-for="Lesson.LessonName" type="text" class="form-control" id="lessonName"
                                           placeholder="Enter Lesson Name">
                                    <span asp-validation-for="Lesson.LessonName" class="text-danger"></span>
                                </div>

                                @* Lesson Description *@
                                <div class="mb-3">
                                    <label asp-for="Lesson.LessonDescription" class="form-label">Lesson Description</label>
                                    <textarea asp-for="Lesson.LessonDescription" class="form-control" id="lessonDescription" rows="5"
                                              placeholder="Enter Lesson Description"></textarea>
                                    <span asp-validation-for="Lesson.LessonDescription" class="text-danger"></span>
                                </div>

                                @* Lesson Type *@
                                <div class="mb-3">
                                    <label asp-for="Lesson.LessonTypeId" class="form-label">Lesson Type</label>
                                    <select asp-for="Lesson.LessonTypeId" class="form-select" id="lessonTypeId" onchange="toggleLessonContent()">
                                        <option value="">-- Select Lesson Type --</option>
                                        <option value="1">Video</option>
                                        <option value="2">Reading</option>
                                    </select>
                                    <span asp-validation-for="Lesson.LessonTypeId" class="text-danger"></span>
                                </div>

                                @* Video Section *@
                                <div class="mb-3" id="videoSection" style="display: none;">
                                    <div class="mt-3" id="youtubeLinkSection">
                                        <label asp-for="LessonLink" class="form-label">YouTube Video Link</label>
                                        <input asp-for="LessonLink" type="url" class="form-control" placeholder="https://www.youtube.com/watch?v=example">
                                        <span asp-validation-for="LessonLink" class="text-danger"></span>
                                    </div>
                                </div>

                                @* Reading Section *@
                                <div class="mb-3" id="readingSection" style="display: none;">
                                    <label asp-for="LessonContentFile" class="form-label">Upload Lesson Content (Reading)</label>
                                    <input asp-for="LessonContentFile" type="file" class="form-control" id="lessonContentFile" accept=".pdf, .doc, .docx, .txt" />
                                    <span asp-validation-for="LessonContentFile" class="text-danger"></span>
                                </div>

                                @* Submit Button *@
                                <div class="text-center">
                                    <button type="submit" class="btn btn-success">Create</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Footer/_Footer.cshtml")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script>
        function toggleLessonContent() {
            const lessonType = parseInt(document.getElementById('lessonTypeId').value);
            const videoSection = document.getElementById('videoSection');
            const readingSection = document.getElementById('readingSection');
            const lessonLink = document.querySelector("input[name='LessonLink']");
            const fileInput = document.getElementById('lessonContentFile');

            if (lessonType === 1) {
                videoSection.style.display = 'block';
                readingSection.style.display = 'none';
                lessonLink.removeAttribute('disabled');
                lessonLink.setAttribute('required', 'required');
                fileInput.setAttribute('disabled', 'disabled');
                fileInput.removeAttribute('required');
            } else if (lessonType === 2) {
                videoSection.style.display = 'none';
                readingSection.style.display = 'block';
                lessonLink.setAttribute('disabled', 'disabled');
                lessonLink.removeAttribute('required');
                fileInput.removeAttribute('disabled');
                fileInput.setAttribute('required', 'required');
            } else {
                videoSection.style.display = 'none';
                readingSection.style.display = 'none';
                lessonLink.setAttribute('disabled', 'disabled');
                fileInput.setAttribute('disabled', 'disabled');
            }
        }

        document.addEventListener("DOMContentLoaded", function () {
            toggleLessonContent();
            document.getElementById('lessonTypeId').addEventListener('change', toggleLessonContent);
        });
    </script>
</body>

</html>
