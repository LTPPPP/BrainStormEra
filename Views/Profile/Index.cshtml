@model BrainStormEra.Models.Account

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css">
    <link rel="stylesheet" href="~/css/HomePage/homePage.css">
    <link rel="stylesheet" href="~/css/Profile/profile.css">
    <!-- Custom Styles for Adjusting Header and Layout -->
</head>

<body>
    <!-- Header Section -->
    <header class="container-fluid sticky-header" style="background-color: white;">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("RedirectToHome", "Login")">
                    <img src="~/lib/img/Login/BrainStormEra_logo.png" alt="BrainStormEra Logo" class="logo_img">
                </a>

            </div>
        </nav>
    </header>

    <!-- Main Content Section -->
    <main class="container mt-5" style="background-color : white ;">
        <div class="row">
            <!-- Profile Card -->
            <div class="col-md-4">
                <div class="profile-card">
                    <img class="card-img-top avatar" src="@Url.Content(Model.UserPicture ?? "~/lib/img/User-img/default_user.png")" alt="User Picture" />
                    <h3>@Model.FullName</h3>
                    <h4>@Model.UserEmail</h4>
                </div>
            </div>

            <!-- Profile Details Section -->
            <div class="col-md-8">
                <h2 class="title-container">@Model.FullName's Profile</h2>
                <table class="table table-hover table-bordered">
                    <tbody>
                        <tr>
                            <th>Username</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.UserEmail</td>
                        </tr>
                        <tr>
                            <th>Full Name</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@Model.DateOfBirth?.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.UserAddress</td>
                        </tr>
                        <tr>
                            <th>Payment Points</th>
                            <td>@Model.PaymentPoint</td>
                        </tr>
                        <tr>
                            <th>Account Created At</th>
                            <td>@Model.AccountCreatedAt?.ToString("MM/dd/yyyy")</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Edit Profile Button -->
                <a href="@Url.Action("Edit", "Profile", new { id = @Model.UserId })" class="btn btn-custom btn-lg mt-3">
                    Edit Profile
                </a>
            </div>
        </div>
    </main>

    <!-- Footer Section -->
    <footer class="bg-secondary text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h3>BrainStormEra</h3>
                    <div class="social-icons my-2">
                        <a href="https://facebook.com/brainstormera" aria-label="Facebook"><i class="fab fa-facebook me-2"></i></a>
                        <a href="https://instagram.com/brainstormera" aria-label="Instagram"><i class="fab fa-instagram me-2"></i></a>
                        <a href="https://twitter.com/brainstormera" aria-label="Twitter"><i class="fab fa-x-twitter"></i></a>
                    </div>
                    <p>2024 by BrainStormEra.</p>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h4>Contact Us</h4>
                    <p class="mb-1">Tel: 123-456-789</p>
                    <p>Email: brainstormera@edu.vn</p>
                </div>
                <div class="col-md-4">
                    <h4>Address</h4>
                    <p class="mb-1">123 Nguyen Van Cu, Cai Rang</p>
                    <p>District, Cantho, Vietnam</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- Link to Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
