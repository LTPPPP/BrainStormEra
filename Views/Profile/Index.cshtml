@model BrainStormEra.Models.Account

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Link to Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css">
    <link rel="stylesheet" href="~/css/HomePage/homePage.css">
    <link rel="stylesheet" href="~/css/Profile/profile.css">
</head>

<body>
    <!-- Header Section -->
    <header class="container-fluid sticky-header" style="background-color: white;">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("RedirectToHome", "Login")">
                    <img src="~/lib/img/Login/BrainStormEra_logo.png" alt="BrainStormEra Logo" class="logo_img">
                </a>
            </div>
        </nav>
    </header>

    <!-- Main Content Section -->
    <main class="container mt-5" style="background-color : white ;">
        <div class="row">
            <!-- Profile Card -->
            <div class="col-md-4">
                <div class="profile-card">
                    <img id="avatarPreview"
                         src="@(!string.IsNullOrEmpty(Model.UserPicture) ? Model.UserPicture : Url.Content("~/lib/img/User-img/default_user.png"))"
                         alt="Avatar"
                         class="avatar-preview img-thumbnail"
                         style="max-width: 150px;"
                         onerror="this.onerror=null;this.src='~/lib/img/User-img/default_user.png';" />
                    <h4>@Model.FullName</h4>
                    <p>@Model.UserEmail</p>

                    <!-- Payment QR Code Section (Đặt dưới thông tin user) -->
                    <div class="card text-center mt-4">
                        <div class="card-header text-white" style="background-color : #7FB29D;">
                            <h3 class="mb-0">Thanh toán</h3>
                        </div>
                        <div class="card-body">
                            <img src="~/uploads/QR_Payment/QR-code.png" alt="QR Code" class="img-fluid rounded mb-3" style="max-width: 150px;" />
                            <p class="card-text">Quét mã QR để thanh toán một cách nhanh chóng và an toàn.</p>
                        </div>
                        <div class="card-footer text-muted">
                            Hệ thống thanh toán BrainStormEra
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Details Section -->
            <div class="col-md-8">
                <h2 class="title-container">@Model.FullName's Profile</h2>
                <table class="table table-hover table-bordered">
                    <tbody>
                        <tr>
                            <th>Username</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.UserEmail</td>
                        </tr>
                        <tr>
                            <th>Full Name</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@Model.DateOfBirth?.ToShortDateString()</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.UserAddress</td>
                        </tr>
                        <tr>
                            <th>Payment Points</th>
                            <td>@Model.PaymentPoint</td>
                        </tr>
                        <tr>
                            <th>Account Created At</th>
                            <td>@Model.AccountCreatedAt.ToString("MM/dd/yyyy")</td>
                        </tr>
                    </tbody>
                </table>

                <!-- Edit Profile Button -->
                <a href="@Url.Action("Edit", "Profile")" class="btn btn-custom btn-lg mt-3">
                    Edit Profile
                </a>
            </div>
        </div>
    </main>

    <!-- Payment Confirmation Popup Modal -->
    <div id="paymentModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content shadow-lg" style="max-height: 90vh; overflow-y: auto;">
                <div class="modal-header bg-primary text-white rounded-top">
                    <h5 class="modal-title font-weight-bold" id="paymentModalLabel">Xác nhận thanh toán</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-center text-muted">Vui lòng tải lên hình ảnh xác nhận giao dịch của bạn.</p>
                    <form asp-action="ConfirmPayment" method="post" enctype="multipart/form-data">
                        <div class="form-group text-center">
                            <label for="paymentImage" class="font-weight-bold">Đính kèm hình ảnh giao dịch:</label>
                            <input type="file" name="paymentImage" id="paymentImage" class="form-control" accept="image/*" required onchange="previewImage(event)" />
                        </div>

                        <!-- Khung Preview hình ảnh -->
                        <div id="imagePreviewContainer" class="text-center mb-3" style="display: none;">
                            <p class="text-muted">Xem trước hình ảnh của bạn:</p>
                            <img id="imagePreview" src="#" alt="Preview Image" class="img-fluid rounded shadow" style="max-height: 300px; max-width: 100%;" />
                        </div>

                        <button type="submit" class="btn btn-success btn-block mt-3">Xác nhận đã thanh toán</button>
                    </form>
                </div>
                <div class="modal-footer bg-light rounded-bottom">
                    <small class="text-muted mx-auto">Xin cảm ơn quý khách đã sử dụng dịch vụ của chúng tôi.</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Script for Image Preview -->
    <script>
        function previewImage(event) {
            const imagePreviewContainer = document.getElementById('imagePreviewContainer');
            const imagePreview = document.getElementById('imagePreview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    imagePreview.src = e.target.result;
                    imagePreviewContainer.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                imagePreviewContainer.style.display = 'none';
            }
        }
    </script>



    <!-- Footer -->
    @await Html.PartialAsync("~/Views/Shared/Footer/_Footer.cshtml")

    <!-- Link to Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function openPaymentModal() {
            $('#paymentModal').modal('show');
        }
    </script>
</body>
</html>